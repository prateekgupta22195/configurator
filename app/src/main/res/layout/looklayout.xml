<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">

        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">


            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device ID"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"

                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textColor="#cccccc"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </TableRow>

        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">


            <TextView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"

                android:textAppearance="?android:attr/textAppearanceMedium" />


            <ImageView
                android:id="@+id/bimg"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/greentick"
                android:scaleType="fitStart"
                android:paddingLeft="15sp"
                android:paddingTop="2sp"/>

        </TableRow>


        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/ignition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ignition"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <ImageView
                android:id="@+id/iimg"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/greentick"
                android:scaleType="fitStart"
                android:paddingLeft="15sp"
                android:paddingTop="2sp"
                />

        </TableRow>

        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/locatedat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Located At"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/locatedatans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:gravity="left"
                    android:paddingLeft="15sp"
                    android:textColor="#cccccc"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iimg1"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:scaleType="fitStart"
                    android:paddingLeft="15sp"
                    android:paddingTop="2sp"
                    />
            </LinearLayout>


        </TableRow>
        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/locationans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textColor="#cccccc"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </TableRow>

        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/distanceans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textColor="#cccccc"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </TableRow>

        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/orientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orientation"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/orientationans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textColor="#cccccc"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/iostate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IO State"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/iostateans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:gravity="left"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:textColor="#cccccc"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>
    </TableLayout>
    <ImageView android:layout_gravity="center"
        android:id="@+id/passed"
        android:background="@drawable/passed"
        android:layout_width="200dp"
        android:layout_height="100dp" />
</LinearLayout>